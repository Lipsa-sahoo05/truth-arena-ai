# Digital Public Square - Environment Variables

# Frontend Configuration
VITE_APP_NAME="Digital Public Square"
VITE_APP_URL=http://localhost:8080

# Supabase Configuration (Enable Supabase integration to get these)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# FastAPI Backend Configuration
VITE_API_URL=http://localhost:8000

# n8n Workflow Webhooks
VITE_N8N_MODERATION_WEBHOOK=http://localhost:5678/webhook/moderation
VITE_N8N_FACTCHECK_WEBHOOK=http://localhost:5678/webhook/factcheck

# AI Provider Configuration (for backend)
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1

# Alternative AI Providers (choose one)
ANTHROPIC_API_KEY=your-anthropic-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Database Configuration (for FastAPI backend)
DATABASE_URL=postgresql://user:password@localhost:5432/dps_db

# Vector Database (for embeddings)
SUPABASE_DB_URL=postgresql://user:password@db.your-project.supabase.co:5432/postgres

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# n8n Configuration
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your-n8n-password

# Webhook Security
WEBHOOK_SECRET=your-webhook-secret

# Moderation Configuration
TOXICITY_THRESHOLD=0.7
FACT_CHECK_CONFIDENCE_THRESHOLD=0.6

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000